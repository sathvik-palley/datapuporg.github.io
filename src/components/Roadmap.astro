---
const roadmapItems = [
  {
    status: 'completed',
    title: 'ClickHouse Support',
    description: 'Full support for ClickHouse with optimized query performance and native features.',
    contributor: 'Core Team'
  },
  {
    status: 'completed',
    title: 'PostgreSQL Support',
    description: 'Native PostgreSQL integration with full feature parity.',
    contributor: 'Core Team'
  },
  {
    status: 'planned',
    title: 'MySQL Support',
    description: 'MySQL and MariaDB support with performance optimizations.',
    contributor: 'Help Wanted'
  },
  {
    status: 'planned',
    title: 'Query Builder',
    description: 'Visual query builder for complex queries without writing SQL.',
    contributor: 'Help Wanted'
  }
];

const getStatusIcon = (status: string) => {
  switch (status) {
    case 'completed':
      return 'âœ…';
    case 'in-progress':
      return 'ðŸš§';
    case 'planned':
      return 'ðŸ“‹';
    default:
      return 'ðŸ“‹';
  }
};

const getStatusClass = (status: string) => {
  switch (status) {
    case 'completed':
      return 'status-completed';
    case 'in-progress':
      return 'status-progress';
    case 'planned':
      return 'status-planned';
    default:
      return '';
  }
};
---

<section id="roadmap" class="py-20 section relative">
  <div class="absolute inset-0 gradient-bg"></div>
  
  <div class="container relative">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4 gradient-text">Community Roadmap</h2>
      <p class="text-lg text-muted max-width-prose mx-auto">
        Built in the open, with the community. See what's coming next and contribute to the features you need.
      </p>
    </div>
    
    <div class="roadmap-container">
      {roadmapItems.map((item, index) => (
        <div class="roadmap-item" style={`animation-delay: ${index * 0.15}s`}>
          <div class="roadmap-card glass-card">
            <div class="roadmap-header">
              <div class="status-badge">
                <span class="status-icon">{getStatusIcon(item.status)}</span>
                <div class={`status-indicator ${getStatusClass(item.status)}`}></div>
              </div>
              <h3 class="roadmap-title">{item.title}</h3>
            </div>
            
            <p class="roadmap-description">{item.description}</p>
            
            <div class="roadmap-footer">
              <span class={`contributor-badge ${item.contributor === 'Help Wanted' ? 'help-wanted' : ''}`}>
                {item.contributor === 'Help Wanted' ? 'ðŸ‘‹ ' : ''}
                {item.contributor}
              </span>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="cta-section">
      <h3 class="text-2xl font-semibold mb-4">Want to Contribute?</h3>
      <p class="text-muted mb-6 max-width-prose mx-auto">
        Every feature in DataPup is built by developers like you. Join us in creating the best database client.
      </p>
      <div class="cta-buttons">
        <a href="https://github.com/DataPupOrg/DataPup/issues" class="btn btn-primary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v20M2 12h20"/>
          </svg>
          Create Feature Request
        </a>
        <a href="https://github.com/DataPupOrg/DataPup/blob/main/CONTRIBUTING.md" class="btn btn-secondary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 3H6a2 2 0 0 0-2 2v14c0 1.1.9 2 2 2h12a2 2 0 0 0 2-2V7l-6-4z"/>
            <path d="M14 3v4a2 2 0 0 0 2 2h4"/>
          </svg>
          Contributing Guide
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-bg {
    background: var(--gradient-mesh);
    opacity: 0.3;
  }
  
  .roadmap-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .roadmap-item {
    opacity: 0;
    animation: fadeInScale 0.6s ease-out forwards;
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .roadmap-card {
    height: 100%;
    padding: 2rem;
    border-radius: 1.5rem;
    background: var(--glass-bg);
    backdrop-filter: var(--blur-md);
    -webkit-backdrop-filter: var(--blur-md);
    border: 1px solid var(--glass-border);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }
  
  .roadmap-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .roadmap-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .status-badge {
    position: relative;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-secondary);
    border-radius: 12px;
  }
  
  .status-icon {
    font-size: 1.5rem;
    z-index: 1;
  }
  
  .status-indicator {
    position: absolute;
    inset: 0;
    border-radius: 12px;
    opacity: 0.2;
  }
  
  .status-completed {
    background: #10b981;
  }
  
  .status-progress {
    background: var(--color-warning);
    animation: pulse 2s ease-in-out infinite;
  }
  
  .status-planned {
    background: var(--color-text-secondary);
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.4;
    }
  }
  
  .roadmap-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .roadmap-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex: 1;
  }
  
  .roadmap-footer {
    margin-top: 1.5rem;
  }
  
  .contributor-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
  }
  
  .contributor-badge.help-wanted {
    background: var(--gradient-primary);
    color: white;
    border: none;
  }
  
  .cta-section {
    text-align: center;
    padding: 3rem;
    border-radius: 1.5rem;
    background: var(--glass-bg);
    backdrop-filter: var(--blur-md);
    -webkit-backdrop-filter: var(--blur-md);
    border: 1px solid var(--glass-border);
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .gradient-text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  html.dark .glass-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 768px) {
    .roadmap-container {
      grid-template-columns: 1fr;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>